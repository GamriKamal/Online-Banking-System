<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Online Banking System</display-name>

    <servlet>
        <servlet-name>MainMenuServlet</servlet-name>
        <servlet-class>com.banksystem.onlinebankingsystem.Servlets.MainMenuServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>MainMenuServlet</servlet-name>
        <url-pattern>/onlineBank</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddAccountServlet</servlet-name>
        <servlet-class>com.banksystem.onlinebankingsystem.Servlets.AddAccountServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddAccountServlet</servlet-name>
        <url-pattern>/addAccount</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AccountServlet</servlet-name>
        <servlet-class>com.banksystem.onlinebankingsystem.Servlets.AccountServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AccountServlet</servlet-name>
        <url-pattern>/accounts</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>GetAccountByIdServlet</servlet-name>
        <servlet-class>com.banksystem.onlinebankingsystem.Servlets.GetAccountByIdServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetAccountByIdServlet</servlet-name>
        <url-pattern>/getAccountById</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteAccountByIdServlet</servlet-name>
        <servlet-class>com.banksystem.onlinebankingsystem.Servlets.GetAccountByIdServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteAccountByIdServlet</servlet-name>
        <url-pattern>/deleteAccountById</url-pattern>
    </servlet-mapping>

</web-app>